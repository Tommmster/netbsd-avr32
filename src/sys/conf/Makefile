SRC_DIR  = ../..
SYS_DIR  = $(SRC_DIR)/sys
OPT_DIR  = $(SYS_DIR)/opt
INCLUDES = -I$(OPT_DIR) -I$(SYS_DIR) -I$(SYS_DIR)/inc -I$(SRC_DIR)/common/include -I$(SYS_DIR)/dev

AVR32_CC     = avr32-gcc
AVR32_CFLAGS = -mrelax -mno-pic -march=ap -nostdlib -nostdinc -ffreestanding -D_KERNEL -D__NetBSD__ -DVMSWAP -Ulinux -U__linux__ -DSYSVSEM -DSYSVMSG $(INCLUDES) 
SOURCES = $(shell find . -name \*.c)
OBJECTS = $(patsubst %.c, %.o, $(SOURCES))

all: $(OBJECTS)
 	:

%.o: %.c
	$(AVR32_CC) $(AVR32_CFLAGS) -c $<

clean:
	rm -rf *.o
